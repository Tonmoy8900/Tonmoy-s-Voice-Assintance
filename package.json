
{
  "name": "myra-ai-assistant",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron-dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron-build": "npm run build && electron-builder",
    "start": "electron ."
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/d3": "^7.4.3",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  },
  "dependencies": {
    "@google/genai": "^0.12.0",
    "d3": "^7.9.0",
    "mic": "^2.1.2",
    "playwright": "^1.45.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vosk": "^0.3.39"
  },
  "build": {
    "appId": "com.tonmoydas.myraai",
    "files": [
      "dist/**/*",
      "main.js",
      "electron/**/*",
      "icon.png",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
